    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4B088A" >

    <com.outsource.ekg.ui.WaveformView
        android:id="@+id/waveform"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFE6E6E6" 
        ekg:cellX="30"
        ekg:cellY="10"
        ekg:decorBackgroundColor="#ffFEF9D9"
        ekg:labelColor="#ff340000"
        ekg:labelSize="15"
        ekg:decorBackgroundRadiusX="14"
        ekg:decorBackgroundRadiusY="14"
        ekg:title="Hello world!"
