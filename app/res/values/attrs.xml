<resources>

    <!-- WaveformView specific attributes. These attributes are used to customize
         a WaveformView view in XML files. -->
    <declare-styleable name="WaveformView">
        <!-- The cell number of a grid in x direction . -->
        <attr name="cellX" format="integer" />
        <!-- The cell number of a grid in y direction . -->
        <attr name="cellY" format="integer" />
        <!-- The color of the decorate background. -->
        <attr name="decorBackgroundColor" format="color" />
        <!-- The color of the grid background. -->
        <attr name="gridBackgroundColor" format="color" />
        <!-- The color of the grid line. -->
        <attr name="gridColor" format="color" />
        <!-- The color of the decorate label(axis x, axis y, title, etc.). -->
        <attr name="labelColor" format="color" />
        <attr name="waveformColor" format="color" />
        <!-- The size of label . -->
        <attr name="labelSize" format="integer" />
        <!-- The label of x axis . -->
        <attr name="xAxislabel" format="string" />
        <!-- The label of y axis . -->
        <attr name="yAxislabel" format="string" />
        <!-- The x radius of the decorate background round .  -->
        <attr name="decorBackgroundRadiusX" format="integer" />
        <!-- The y radius of the decorate background round .  -->
        <attr name="decorBackgroundRadiusY" format="integer" />
        <!-- The title of the Waveform diagramm . -->
        <attr name="title" format="string" />
    </declare-styleable>
</resources>
